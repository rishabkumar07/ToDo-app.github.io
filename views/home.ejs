<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css" integrity="sha384-Bfad6CLCknfcloXFOyFnlgtENryhrpZCe29RTifKEixXQZ38WheV+i/6YWSzkz3V" crossorigin="anonymous">
        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        
            <div id='main-container'>
                <div id="heading-container">
                    <h1 id="page-heading"><i class="fas fa-edit"></i>
                        ToDo App
                    </h1>
                </div>
                    <!-- form to create a new todo -->
                    <div id='form-container'>
                        
                        <form action="/create-todo" method="POST" autocomplete="off">
                            
                            <label for="desc" class="l-style">Desciption</label><br>
                            <input type="text" name="description" id="desc" placeholder="What you need to be done?" required><br>

                            <!-- for dropdown options -->
                            <div id="div-main">
                                <div id="div-one">
                                    <label for="catg" class="l-style" id="cat">Category</label> <br>
                                    <select name="category" id="catg" required>
                                        <option value="" disabled selected>Choose a Category</option>
                                        <option value="Personal">Personal</option>
                                        <option value="Work">Work</option>
                                        <option value="School">School</option>
                                        <option value="Health">Health</option>
                                        <option value="Others">Others</option>
                            </select>  
                            </div>
                            <!-- datepicker -->
                            <div id="div-two">
                                <label for="datepicker" class="l-style" id="d-lab">
                                    <i class="far fa-calendar-alt"></i>
                                    Due Date</label> <br>
                                <input type="text" name="date" id="datepicker"  placeholder="dd/mm/yy" required>
                        
                            </div>
                            
                        </div>

                            <div id="button-container">
                            

                                <button type="submit" id="button1" class="btn">
                                    <i class="fas fa-plus"></i>
                                    Add Task</button>
                        
                        </form>
                    
                    
                        <!-- to delete a todo -->
                        <form action="/delete" method="get">
                                <button type="submit" id="delete" class="btn">
                                    <i class="fa fa-trash"></i>
                                    Delete Task
                                </button>
                        </div>
                </div>
                                <div id="output">
                                <% for(let i of todo){ %>
                                    
                                    <div id="out-container">      
                                        <input type="checkbox" id="output" name="<%= i._id%>">  
                                        <label for="output" class="strike" id="ch-lab">
                                            <div id='details-cont'>
                                                <div id="details-one">
                                                    <p id="name"><%= i.description %></p>
                                                    <p id="date">
                                                    <i class="far fa-calendar-alt"></i>
                                                    <%= i.date %>
                                                    </p>
                                                </div>
                                                
                                            <div id="details-two">
                                                <p id="category"><%= i.category %></p>
                                            </div>    
                                        </div>
                                
                                    </label>
                                </div> 
                            <% } %>  
  
                            
                            
                </div>
            </form>
           

        </div>
        
        <!-- for quote -->
        <div id="quote-container">
            
                <p id="quote">"Exploration has no limits..."
                    <i class="fa fa-heart like" aria-hidden="true"></i>
                </p>

        </div>
        
        <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
            crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js" integrity="sha256-T0Vest3yCU7pafRw9r+settMBX6JkKN06dqBnpQ8d30="
            crossorigin="anonymous"></script>
        <script type="text/javascript" src='/js/home.js'></script>
    </body>
</html>